{
  "compilerOptions": {
    "target": "es6",
    "module": "Node16",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src/",
    "outDir": "lib/",
    "lib": ["es6", "dom", "es2017"]
  },
  "include": ["src/**/*"]
}
